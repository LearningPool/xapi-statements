{
  "name": "xapi-statements",
  "version": "0.0.0-development",
  "description": "A service for xAPI statements",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/LearningLocker/xapi-statements.git"
  },
  "files": [
    "dist",
    ".env.example",
    "package-lock.json"
  ],
  "scripts": {
    "acp": "git add -A && npm run commit && git push",
    "commit": "git-cz",
    "build": "tsc",
    "start": "node dist/index.js",
    "migrate": "node dist/migrate.js",
    "rollback": "node dist/rollback.js",
    "test": "mocha $(find dist -name '*.test.js') --timeout 6000",
    "test-s3": "MODELS_REPO=memory STORAGE_REPO=s3 npm run test",
    "test-mongo": "MODELS_REPO=mongo STORAGE_REPO=local npm run test",
    "test-memory": "MODELS_REPO=memory STORAGE_REPO=local npm run test",
    "test-ci": "npm run test-memory && npm run test-mongo",
    "test-all": "npm run test-ci && npm run test-s3",
    "cover-ci": "nyc --lines 100 --check-coverage --exclude '(dist/testEventsRepo|dist/testAuthRepo|dist/fetchAuthRepo|dist/s3StorageRepo|dist/config.js)' npm run test-ci",
    "cover-all": "nyc --lines 100 --check-coverage --exclude '(dist/testEventsRepo|dist/testAuthRepo|dist/fetchAuthRepo|dist/config.js)' npm run test-all",
    "clean": "rm -rf dist",
    "lint": "./node_modules/tslint/bin/tslint --project ./tsconfig.json",
    "duplication": "./node_modules/jscpd/bin/jscpd",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "engines": {
    "node": "^8.0.0",
    "npm": "^5.0.0"
  },
  "dependencies": {
    "@types/mime-types": "^2.1.0",
    "accept-language-parser": "^1.4.1",
    "atob": "^2.0.3",
    "aws-sdk": "^2.97.0",
    "bluebird": "^3.5.0",
    "body-parser": "^1.17.1",
    "boolean": "^0.1.2",
    "btoa": "^1.1.2",
    "cors": "^2.8.1",
    "dotenv": "^4.0.0",
    "express": "^4.14.1",
    "file-stream-rotator": "^0.2.0",
    "fs-extra": "^4.0.2",
    "helmet": "^3.5.0",
    "jscommons": "git+https://git@github.com/HT2-Labs/jscommons.git",
    "jsonwebtoken": "^8.0.1",
    "lodash": "^4.17.4",
    "mime-types": "^2.1.17",
    "moment": "^2.18.0",
    "mongodb": "^2.2.26",
    "morgan": "^1.8.1",
    "node-fetch": "^1.6.3",
    "object-hash": "1.1.8",
    "promise-retry": "^1.1.1",
    "redis": "^2.8.0",
    "rulr": "^3.0.0",
    "source-map-support": "^0.4.11",
    "stream-to-string": "^1.1.0",
    "string-to-stream": "^1.1.0",
    "uuid": "^3.0.1",
    "winston": "^2.3.1",
    "winston-aws-cloudwatch": "^1.5.0",
    "xapi-validation": "git+https://git@github.com/LearningLocker/xapi-validation.git"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.4",
    "@types/body-parser": "^1.16.0",
    "@types/cors": "^2.8.1",
    "@types/dotenv": "^4.0.1",
    "@types/express": "^4.0.35",
    "@types/fs-extra": "^4.0.2",
    "@types/helmet": "0.0.36",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/lodash": "^4.14.52",
    "@types/mocha": "^2.2.39",
    "@types/mongodb": "^2.2.2",
    "@types/morgan": "^1.7.32",
    "@types/node": "^8.0.6",
    "@types/node-fetch": "^1.6.7",
    "@types/object-hash": "^0.5.28",
    "@types/redis": "^2.6.0",
    "@types/source-map-support": "^0.4.0",
    "@types/uuid": "^3.4.2",
    "@types/winston": "^2.2.0",
    "assert": "^1.4.1",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.0.0",
    "jscpd": "git://github.com/ryansmith94/jscpd.git#prepublish",
    "mocha": "^3.4.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^11.0.0",
    "semantic-release": "^8.0.3",
    "travis-cov": "^0.2.5",
    "tslint": "^5.7.0",
    "tslint-consistent-codestyle": "^1.6.0",
    "typescript": "^2.1.6"
  }
}
